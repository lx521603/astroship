---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 未找到">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex flex-col items-center justify-center text-center">
      <div class="mt-16">
        <!-- 本地图片 -->
        <img
          src="/images/octocat.png"
          alt="GitHub 404 猫"
          class="w-48 h-48 mx-auto"
        />
        <h1 class="text-4xl lg:text-5xl font-bold mt-6 text-slate-800">404</h1>
        <p class="text-lg mt-2 text-slate-600">页面走丢啦～</p>
        <a
          href="/"
          class="mt-6 inline-block px-6 py-3 text-white bg-black rounded-lg hover:bg-slate-800 transition"
        >
          ← 返回首页
        </a>
      </div>
    </div>
  </Container>
</Layout>
